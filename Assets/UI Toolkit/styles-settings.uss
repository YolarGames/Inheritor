.size-300p {
    width: 300px;
}

.margin-50-50-50-50 {
    margin: 50px;
}

.unity-base-slider__dragger {
    margin: 0;
    top: -100%;
    border-radius: 50px;
    width: 80px;
    height: 80px;
}

.unity-base-slider__dragger:hover {
    margin: 0;
    top: -100%;
    border-radius: 50px;
    width: 80px;
    height: 80px;
    scale: 1.2 1.2;
    transition-property: scale;
    transition-timing-function: ease-out-cubic;
    transition-duration: 0.2s;
}

.unity-base-slider__dragger:active {
    margin: 0;
    top: -100%;
    border-radius: 50px;
    width: 80px;
    height: 80px;
    scale: 1.05 1.05;
    transition-property: scale;
    transition-duration: 0.05s;
    transition-timing-function: ease-in-sine;
}

.unity-base-slider__tracker {
    border-radius: 10px;
    margin: 0;
    height: 100%;
    top: 0;
}

.auth-button {
    width: 128px;
    height: 128px;
