.settings-menu {
    height: 60%;
    justify-content: space-between;
}

.settings-subMenu {
    height: 45%;
    justify-content: space-around;
    position: absolute;
    width: 100%;
    top: 250px;
    transition-property: translate;
    transition-duration: 0.5s;
    transition-timing-function: ease-out-cubic;
}

